---
// Contact Section
// Maintains original contact info with enhanced design
---

<section id="contact" class="section-padding bg-[var(--bg-secondary)] relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute top-0 left-0 w-[500px] h-[500px] bg-gradient-to-br from-primary-500/5 to-transparent rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-[400px] h-[400px] bg-gradient-to-tl from-accent-500/5 to-transparent rounded-full blur-3xl"></div>

  <div class="container-custom relative">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 rounded-full bg-primary-500/10 text-primary-500 text-sm font-medium mb-4">
        Contact
      </span>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-[var(--text-primary)] mb-6">
        Let's Start a Conversation
      </h2>
      <p class="text-lg text-[var(--text-secondary)] max-w-2xl mx-auto">
        Whether you're a founder seeking funding or want to explore partnership opportunities,
        we'd love to hear from you.
      </p>
    </div>

    <div class="grid lg:grid-cols-5 gap-12 items-start">
      <!-- Contact Form - Takes 3 columns -->
      <div class="lg:col-span-3">
        <div class="bg-[var(--bg-primary)] p-8 md:p-10 rounded-3xl border border-[var(--border-color)]">
          <h3 class="text-xl font-semibold text-[var(--text-primary)] mb-2">Send us a message</h3>
          <p class="text-[var(--text-secondary)] mb-8">Fill out the form below and we'll get back to you within 48 hours.</p>

          <form action="https://formspree.io/f/mdoqayab" method="POST" class="space-y-6">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-[var(--text-primary)] mb-2">
                  Full Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="form-input"
                  placeholder="John Smith"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-[var(--text-primary)] mb-2">
                  Email Address <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="form-input"
                  placeholder="john@company.com"
                />
              </div>
            </div>

            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="company" class="block text-sm font-medium text-[var(--text-primary)] mb-2">
                  Company Name
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="form-input"
                  placeholder="Your Company"
                />
              </div>
              <div>
                <label for="subject" class="block text-sm font-medium text-[var(--text-primary)] mb-2">
                  Subject <span class="text-red-500">*</span>
                </label>
                <select id="subject" name="subject" required class="form-input">
                  <option value="">Select a topic...</option>
                  <option value="Pitch">Pitch a Startup</option>
                  <option value="Partnership">Partnership Inquiry</option>
                  <option value="General">General Question</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-[var(--text-primary)] mb-2">
                Message <span class="text-red-500">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="form-input resize-none"
                placeholder="Tell us about your startup, your vision, and what stage you're at..."
              ></textarea>
            </div>

            <!-- Cloudflare Turnstile -->
            <div class="cf-turnstile" data-sitekey="0x4AAAAAAASu7fWARf_GALdD" data-theme="auto"></div>

            <button type="submit" class="btn btn-primary w-full text-base py-4">
              Send Message
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </form>
        </div>
      </div>

      <!-- Contact Info - Takes 2 columns -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Contact Cards -->
        <div class="contact-info-card">
          <div class="contact-icon bg-accent-500/10">
            <svg class="w-6 h-6 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-[var(--text-primary)] mb-1">Email</h4>
            <a href="mailto:info@fairyhillventures.com" class="text-[var(--text-secondary)] hover:text-accent-400 transition-colors">
              info@fairyhillventures.com
            </a>
          </div>
        </div>

        <div class="contact-info-card">
          <div class="contact-icon bg-primary-500/10">
            <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-[var(--text-primary)] mb-1">Phone</h4>
            <a href="tel:954-780-6650" class="text-[var(--text-secondary)] hover:text-primary-400 transition-colors">
              954-780-6650
            </a>
          </div>
        </div>

        <div class="contact-info-card">
          <div class="contact-icon bg-accent-500/10">
            <svg class="w-6 h-6 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-[var(--text-primary)] mb-1">Location</h4>
            <p class="text-[var(--text-secondary)]">
              2511 N Hiatus Rd Unit 212<br />
              Cooper City, FL 33026
            </p>
          </div>
        </div>

        <!-- What to Expect Card -->
        <div class="bg-[var(--bg-primary)] p-6 rounded-2xl border border-[var(--border-color)]">
          <h4 class="font-semibold text-[var(--text-primary)] mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            What to Expect
          </h4>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-[var(--text-secondary)] text-sm">Response within 48 hours</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-[var(--text-secondary)] text-sm">Thoughtful feedback on every pitch</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-[var(--text-secondary)] text-sm">Confidential and respectful process</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-[var(--text-secondary)] text-sm">20+ years of industry expertise</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Cloudflare Turnstile Script -->
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

<style>
  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    color: var(--text-primary);
    font-size: 0.9375rem;
    transition: all 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-accent-400);
    box-shadow: 0 0 0 3px rgba(64, 197, 186, 0.1);
  }

  .form-input::placeholder {
    color: var(--text-tertiary);
  }

  select.form-input {
    cursor: pointer;
    appearance: none;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.75rem center;
    background-repeat: no-repeat;
    background-size: 1.25rem;
    padding-right: 2.5rem;
  }

  .contact-info-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 1rem;
    transition: all 0.2s ease;
  }

  .contact-info-card:hover {
    border-color: var(--color-accent-400);
  }

  .contact-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
</style>
