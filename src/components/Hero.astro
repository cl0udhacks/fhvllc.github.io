---
// Hero Section for Fairy Hill Ventures
// Bold VC identity with animated gradient background
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-[var(--bg-primary)]">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Gradient Orbs -->
    <div class="absolute top-1/4 -left-1/4 w-[600px] h-[600px] bg-gradient-to-r from-primary-500/20 to-accent-500/20 rounded-full blur-3xl animate-float-slow"></div>
    <div class="absolute bottom-1/4 -right-1/4 w-[500px] h-[500px] bg-gradient-to-l from-accent-500/20 to-primary-500/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-br from-primary-400/10 to-accent-400/10 rounded-full blur-3xl animate-pulse-glow"></div>

    <!-- Grid Pattern Overlay -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(100,116,139,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(100,116,139,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <!-- Content -->
  <div class="container-custom relative z-10 pt-24 pb-16">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--bg-tertiary)] border border-[var(--border-color)] mb-8 animate-fade-in-up opacity-0" style="animation-delay: 0.1s;">
        <span class="w-2 h-2 rounded-full bg-accent-500 animate-pulse"></span>
        <span class="text-sm font-medium text-[var(--text-secondary)]">
          Early Stage Venture Capital
        </span>
      </div>

      <!-- Main Headline -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6 animate-fade-in-up opacity-0" style="animation-delay: 0.2s;">
        <span class="text-[var(--text-primary)]">Investing in the</span>
        <br />
        <span class="gradient-text-animated">Future of Security & AI</span>
      </h1>

      <!-- Subheadline -->
      <p class="text-lg sm:text-xl text-[var(--text-secondary)] max-w-2xl mx-auto mb-10 animate-fade-in-up opacity-0" style="animation-delay: 0.3s;">
        Fairy Hill Ventures partners with exceptional founders building transformative companies in
        <span class="text-[var(--text-primary)] font-medium">Cybersecurity</span>,
        <span class="text-[var(--text-primary)] font-medium">Networking</span>, and
        <span class="text-[var(--text-primary)] font-medium">Artificial Intelligence</span>.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up opacity-0" style="animation-delay: 0.4s;">
        <a href="#contact" class="btn btn-primary text-base px-8 py-4">
          Request a Meeting
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="#thesis" class="btn btn-secondary text-base px-8 py-4">
          Our Investment Thesis
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-20 animate-fade-in-up opacity-0" style="animation-delay: 0.5s;">
        <div class="stat-card">
          <span class="text-3xl sm:text-4xl font-bold gradient-text">20+</span>
          <span class="text-sm text-[var(--text-tertiary)] mt-1">Years Experience</span>
        </div>
        <div class="stat-card">
          <span class="text-3xl sm:text-4xl font-bold gradient-text">Seed</span>
          <span class="text-sm text-[var(--text-tertiary)] mt-1">Stage Focus</span>
        </div>
        <div class="stat-card">
          <span class="text-3xl sm:text-4xl font-bold gradient-text">3</span>
          <span class="text-sm text-[var(--text-tertiary)] mt-1">Core Sectors</span>
        </div>
        <div class="stat-card">
          <span class="text-3xl sm:text-4xl font-bold gradient-text">âˆž</span>
          <span class="text-sm text-[var(--text-tertiary)] mt-1">Founder Support</span>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-[var(--text-tertiary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</section>

<style>
  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 1rem;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: var(--color-accent-400);
    transform: translateY(-2px);
    box-shadow: 0 0 20px -5px var(--color-accent-400);
  }

  .dark .stat-card {
    background: rgba(15, 23, 42, 0.5);
  }
</style>
